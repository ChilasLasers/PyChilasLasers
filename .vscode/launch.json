// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug pytest (module)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-s"],              // -s = show prints; nicer when debugging
      "justMyCode": false,               // step into libs too
      "env": { "PYTHONPATH": "${workspaceFolder}/src" } // only needed if not editable-installed
    }
  ]
}
